<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> Event fee</td>
      <td>Rs. <%= @order.discount.to_f + @order.amount.to_f %></td>
    </tr>
    <tr>
      <td> Discount applied</td>
      <td>Rs. <%= @order.discount.to_f %></td>
    </tr>
    <tr>
      <td> Total payable</td>
      <td>Rs. <%= @order.amount.to_f %></td>
    </tr>
  </tbody>
</table>

<div class="login-actions">
  <%= button_to 'Pay', user_event_orders_path, method: :post, params: { discount: @order.discount, amount: @order.amount, status: 'success' }, class: 'btn btn-outline-info' %>
</div>