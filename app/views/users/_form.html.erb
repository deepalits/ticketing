<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-md-4 mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 mb-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4 mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group gender-control">
    <div class="custom-control custom-radio custom-control-inline">
      <%= form.radio_button :gender, 'male', class: "custom-control-input" %>
      <%= form.label :gender_male, 'Male', class: "custom-control-label"%>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <%= form.radio_button :gender, 'female', class: "custom-control-input" %>
      <%= form.label :gender_female, 'Female', class: "custom-control-label"%>
    </div>
  </div>

  <%= form.hidden_field :role_id, value: role_id %>

  <div class="login-actions">
    <%= submit_tag 'Create Profile', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
